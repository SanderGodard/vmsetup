#!/user/bin/bash

# Aliases
alias aliases='nano ~/.bash_aliases'
alias bashrc='nano ~/.bashrc'

alias c='clear'
alias q='exit'
alias r='ranger'
alias o='xdg-open'

alias ..='cd ..'
alias cd..='cd ..'
alias cp='cp -r -i'
alias ll='ls -lahA -F -t --color=auto'
alias ls='ls -F -t --color=auto'
alias sl='ls'
alias la='ls -A -F -t --color=auto'
alias mv='mv -i -v'
alias rm='rm -v -I'

alias sudi='sudo '
alias sudo='sudo '
alias sudp='sudo '

alias deb='dpkg -i'
alias zip='zip -r'
alias dim='echo Terminal Dimensions: $(tput cols) columns x $(tput lines) rows'
alias dir='dir --color=auto'
alias discover='sudo netdiscover -i wlan0'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias metasploit='msfconsole'
alias mkdir='mkdir -pv'
alias nano='nano -A -i -U -q -L'
alias nmapHelp='nmap -sC -sV -A'
alias ping='ping -c 5'
alias pstree='pstree -C age -h'
alias py3='python3'
alias reboot='sudo systemctl reboot'
alias search='echo "Husk at den s√∏ker gjennom dir du er i" && sudo find | grep'
alias shutdown='sudo shutdown now'
alias hibernate='systemctl hibernate'
alias suroot='sudo -E su -p'
alias wifi='nmcli dev wifi'
alias brightness-fix='xrandr --output eDP1 --brightness 1'
alias battery="upower -i /org/freedesktop/UPower/devices/battery_BAT0"
alias cal='cal -wm'
alias sizeOfDir='du -sh'
alias pythonserver='python3 -m http.server'
alias refreshPrompt='PS1=$(~/.prompt_script)'
alias clock='tty-clock -c -C 7'
alias passwdListAnalysis='pipal'
alias commit='git commit -m'
alias grepInDir='grep -r -n -I -i'
alias nc='ncat'
alias xxd='xxd -g 1'
alias hostname="hostnamectl | grep 'Static hostname:' | cut -d: -f2 | awk '{print $1}'"
alias storage="df / | awk 'END{print $5}'"
alias notes='nano notes'
